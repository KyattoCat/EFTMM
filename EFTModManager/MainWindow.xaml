<Window x:Class="EFTModManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EFTModManager"
        mc:Ignorable="d"
        Title="EFT Mod Manager" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 游戏目录选择区域 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
            <TextBlock Text="游戏目录:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="GamePathTextBox" Width="300" VerticalAlignment="Center"/>
        <Button x:Name="BrowseButton" Content="浏览..." Margin="5,0,0,0" Padding="10,2" Click="BrowseButton_Click"/>
        </StackPanel>
        
        <!-- 模组列表区域 -->
        <ListView Grid.Row="1" x:Name="ModsListView" Margin="5">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="启用" Width="50">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsEnabled}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="模组名称" DisplayMemberBinding="{Binding Name}" Width="200"/>
                    <GridViewColumn Header="类型" DisplayMemberBinding="{Binding Type}" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>
        
        <!-- 按钮区域 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <Button x:Name="AddModButton" Content="添加模组" Margin="0,0,5,0" Padding="10,2" Click="AddModButton_Click"/>
            <Button x:Name="RemoveModButton" Content="移除模组" Margin="0,0,5,0" Padding="10,2" Click="RemoveModButton_Click"/>
            <Button x:Name="SaveButton" Content="保存" Padding="10,2" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
